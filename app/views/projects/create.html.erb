<section>
  <%= form_tag url: {action: :create}, html: {class: "basic_form"} do %>
    <%= label_tag :name, 'Name: ' %>
    <%= text_field_tag :name %>
    <br>
    <%= label_tag :purl, 'URL: ' %>
    <%= text_field_tag :purl %>
    <br>
    <%= label_tag :description, 'Description: ' %>
    <br>
    <%= text_area_tag :description %>
    <%= submit_tag "SAVE" %>  
  <% end %>
</section>

