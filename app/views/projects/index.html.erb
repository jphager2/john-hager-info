<section>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Project URL</th>
        <th>Last Updated</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to project.url, project.url %></td>
          <td><%= project.updated_at %></td>
          <td><%= link_to "download", project_path(id: project.id, format: :pdf) %></td>
          <td><%= link_to "edit", edit_project_path(id: project.id) %></td>
          <td><%= link_to "delete", project_path(id: project.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "+ new project", new_project_path %>
</section>
