<%
  skills = {
    "development" => %w{ Ruby },
    "frontend web development" => %w{ HTML JavaScript },
    "backend web development" => [
      "Ruby on Rails", "Sinatra", "Railo-CFML"
    ], 
    "testing" => %w{ Minitest Rspec },
    "other" => %w{ SharePoint Exchange },
  }
%>


<div class="row">
  <div class="large-4 columns">
    <h3>Skills</h3>
  </div>                  <!-- end of left side -->
  <div class="large-8 columns">
    <p>
    <% skills.each do |area,skills| %>
      <span class="skill-area"><%= area.capitalize %></span>
      <span class="skills">(<%= skills.join(', ') %>)</span>
    <% end %>
    </p>
  </div>                  <!-- end of right side -->
</div>                    <!-- end of Skills -->

