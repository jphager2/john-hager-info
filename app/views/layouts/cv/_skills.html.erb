<%
  skills = [
    ["development", %w{ Ruby Git Vim }],
    ["frontend web development", %w{ HTML CSS JavaScript }],
    ["backend web development", [ "Ruby on Rails", "Pakyow", "Sinatra" ]], 
    ["testing", %w{ Minitest }]
  ]
%>

<div class="row">
  <div class="large-4 columns">
    <h3>Skills</h3>
  </div>                  <!-- end of left side -->
  <div class="large-8 columns">
    <% skills.each do |area,skills|  %>
      <p>
        <strong class="skill-area"><%= area.capitalize %></strong>
        <span class="skills">(<%= skills.join(', ') %>)</span>
      </p>
    <% end %>
  </div>                  <!-- end of right side -->
</div>                    <!-- end of Skills -->

